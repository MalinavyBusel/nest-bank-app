{
  "name": "bank-app",
  "version": "0.0.1",
  "description": "",
  "author": "",
  "private": true,
  "license": "UNLICENSED",
  "engines": {
    "node": "~20.12.0"
  },
  "scripts": {
    "reinstall": "rimraf **/node_modules && yarn install",
    "build": "rimraf **/dist && yarn build:common && nest build",
    "build:workspace": "yarn workspaces run build",
    "build:common-model": "yarn workspace common-model build",
    "build:common-rpc": "yarn workspace common-rpc build",
    "build:common": "yarn build:common-model && yarn build:common-rpc",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "start:all:dev": "yarn build && yarn pm2 start pm2/pm2-dev.json",
    "start:api-gateway:dev": "yarn workspace api-gateway start:dev",
    "start:api-gateway:debug": "yarn workspace api-gateway start:debug",
    "start:auth:dev": "yarn workspace auth start:dev",
    "start:auth:debug": "yarn workspace auth start:debug",
    "start:bank:dev": "yarn workspace bank start:dev",
    "start:bank:debug": "yarn workspace bank start:debug",
    "start:client:dev": "yarn workspace client start:dev",
    "start:client:debug": "yarn workspace client start:debug",
    "start:account:dev": "yarn workspace account start:dev",
    "start:account:debug": "yarn workspace account start:debug",
    "start:transaction:dev": "yarn workspace transaction start:dev",
    "start:transaction:debug": "yarn workspace transaction start:debug",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "stop:all":  "pm2 stop all",
    "lint": "yarn workspaces run lint"
  },
  "dependencies": {
    "pm2": "^5.3.1",
    "rimraf": "^5.0.5"
  },
  "devDependencies": {
    "@nestjs/cli": "^10.0.0",
    "@nestjs/schematics": "^10.0.0",
    "@nestjs/testing": "^10.0.0",
    "@types/express": "^4.17.17",
    "@types/jest": "^29.5.2",
    "@types/node": "^20.3.1",
    "@types/supertest": "^6.0.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.42.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "prettier": "^3.0.0",
    "source-map-support": "^0.5.21",
    "supertest": "^6.3.3",
    "ts-loader": "^9.4.3",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.1.3"
  },
  "workspaces": [
    "packages/common-model",
    "packages/common-rpc",
    "packages/auth",
    "packages/api-gateway",
    "packages/bank",
    "packages/client",
    "packages/account",
    "packages/transaction"
  ]
}
